    <Link rel="MediumIcon" href="<%= Jiveapps::WEBHOST %>/apps/dev/<%= name %>/images/icon48.png" />
    <Link rel="LargeIcon"  href="<%= Jiveapps::WEBHOST %>/apps/dev/<%= name %>/images/icon128.png" />

